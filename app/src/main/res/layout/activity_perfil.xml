<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"

    >

  <ImageView
      android:id="@+id/imageViewFotoPerfil"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="44dp"
      android:maxWidth="200dp"
      android:maxHeight="200dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <CalendarView
      android:id="@+id/calendarViewDiarios"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.491"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewNomeUtilizador" />

  <TextView
      android:id="@+id/textViewNomeUtilizador"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      android:text="Nome Utilizador"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
      android:id="@+id/imageButtonBackPerfil"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="80dp"
      android:background="@null"
      app:layout_constraintEnd_toStartOf="@+id/imageViewFotoPerfil"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="?attr/actionModeCloseDrawable" />

  <ImageButton
      android:id="@+id/imageButtonDefinicoes"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="80dp"
      android:layout_marginTop="30dp"
      android:background="@color/white"
      android:src="@drawable/baseline_more_horiz_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageViewFotoPerfil"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>